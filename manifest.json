{
    "manifest_version": 2,

    "name": "MediaCrush",
    "description": "Instantly upload any image on the web to MediaCrush for reliable, fast hosting.",
    "version": "1.1",

    "permissions": [
        "contextMenus",
        "https://mediacru.sh/*",
        "notifications"
    ],
    
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "web_accessible_resources": [
        "icon48.png"
    ],
    
    "background": {
        "scripts": [
            "extension.js"
        ]
    }
}
